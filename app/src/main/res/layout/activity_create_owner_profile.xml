<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.letsgo.createOwnerProfile"
    android:background="@android:color/holo_blue_light"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:stretchColumns="0,1">


    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        />

    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <TextView
            android:text="Fill Your Details:"
            android:layout_span="2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textScaleX="2.5"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        />

    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <TextView
            android:text="HAVING SPACE FOR:"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_column="1"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbone"
                android:text="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/rbtwo"
                android:text="2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/rbthree"
                android:text="3"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RadioGroup>
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        />

    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="STARTING FROM (ORIGIN) :"
            android:layout_column="0"
            android:textStyle="bold">
        </TextView>

        <AutoCompleteTextView
            android:layout_column="1"
            android:id="@+id/textFrom"
            android:textStyle="bold"
            android:hint="@string/from_hint">
        </AutoCompleteTextView>

    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        />


    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="GOING TO(DESTINATION) :"
            android:layout_column="0"
            android:textStyle="bold">
        </TextView>

        <AutoCompleteTextView
            android:id="@+id/textTo"
            android:layout_column="1"
            android:textStyle="bold"
            android:hint="@string/to_hint">
        </AutoCompleteTextView>

    </TableRow>


    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        />

    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="DATE OF JOURNEY :"
            android:layout_column="0"
            android:textStyle="bold"
            >
        </TextView>

        <EditText
            android:id="@+id/textDOJ"
            android:focusable="true"
            android:textStyle="bold"
            android:layout_column="1">
        </EditText>
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        />

    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="VEHICLE DETAILS :"
            android:layout_column="0"
            android:textStyle="bold">
        </TextView>
    </TableRow>
    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
    <AutoCompleteTextView
        android:id="@+id/rto"
        android:hint="RTO"
        android:layout_column="0"
        android:textStyle="bold">
    </AutoCompleteTextView>
    <EditText
        android:id="@+id/vehicle_no"
        android:hint="Vehicle No."
        android:layout_column="0"
        android:textStyle="bold">
    </EditText>
</TableRow>


    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        />
    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <TextView
            android:layout_column="0"
            android:textStyle="bold"
            android:text="EXPECTED FAIR PP (RS.):" />
        <TextView
            android:id="@+id/budget"
            android:layout_column="1"
            android:text="500"
            android:textScaleX="1.2"
            android:textStyle="bold"
            />

    </TableRow>
    <SeekBar
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:max="2000"
        android:progress="500"
        android:secondaryProgress="1000"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:visibility="visible"
        android:indeterminate="false"
        android:id="@+id/budget_seekbar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        />
    <TableRow
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <Button
            android:id="@+id/save"
            android:text="SAVE"
            android:layout_column="0"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/cancel"
            android:text="CANCEL"
            android:layout_column="1"
            android:textStyle="bold">
        </Button>
    </TableRow>


    <ImageView
        android:background="@color/black_overlay"
        android:layout_width="wrap_content"
        android:src="@drawable/car"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        />

</TableLayout>